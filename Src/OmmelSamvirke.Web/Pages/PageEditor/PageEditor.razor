@page "/sideredigering"

@using OmmelSamvirke.Web.Pages.PageEditor.Components;

@inject IJSRuntime JsRuntime

<div 
    id="grid-background" 
    onwheel="@HandleScroll" 
    onwheel:preventDefault="@_preventScrolling" 
    onkeydown="@HandleKeyDown" 
    tabindex="0" 
    onscroll:preventDefault="true"
>
    <div id="grid" @attributes="@_gridStyle">
        <UiHeadlineBlock ContainerDimensions="@_currentDimensions" />
    </div>
</div>
