@using OmmelSamvirke.Web.Pages.PageEditor.Components;

@inherits DraggableUiBlock

<div 
    class="container"
    id="@ElementId" 
    onmousedown="@OnMouseDown"
    onmouseup="@OnMouseUp"
    onmouseleave="@OnMouseUp"
    onmousemove="@OnMouseMove"
    onwheel="@OnMouseMove"
    onkeydown="@OnKeyPress"
    @attributes="@ElementStyle"
    tabindex="0"
>
    <MudPaper>
        <MudText>@_content.Headline</MudText>
    </MudPaper>
</div>
